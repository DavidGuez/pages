    <script>
    $(".button-collapse").sideNav();
    var el = document.querySelector('.custom-scrollbar');
    Ps.initialize(el);
    function load_path(node,path,f) {
        $(node).load('/citoyen/spa/<%= citoyen['user_key'] %>'+path, function(response,status,xhr) {
            if (status=="error") {
                error=JSON.parse(response);
                toastr["error"]('<i>'+error['title']+'</i><br/>'+error['msg']);
            } else {
                if (typeof(f)!=='undefined') f();
                $('#breadcrumb-top-page').html($('#partial_title').val());
                $('.button-collapse').sideNav('hide');
            }
        });
    }
    var root='<% request.host+'/citoyen/'+citoyen['user_key'] %>';
    var useHash=false;
    var router= new Navigo(root,useHash);
    router
        .on({
        'elections/presidentielle-2017': function() { load_path('main','/elections/presidentielle-2017'); },
        'elections/legislatives-2017': function() { load_path('main','/elections/legislatives-2017'); },
        'candidate/admin': function() { load_path('main','/candidate/admin'); },
        'home': function() { load_path('main','/home'); }
    }).resolve();
    router.
        on(function() { $("main").load('/citoyen/spa/<%= citoyen['user_key'] %>/home'); 
    }).resolve();
    </script>
    
